<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'md-float-material form-material'}) do |f| %>
  <div class="text-center">
    <img src="../files/assets/images/logo.png" alt="logo.png">
  </div>
  <div class="auth-box card">
    <div class="card-block">
      <div class="row m-b-20">
        <div class="col-md-12">
          <h3 class="text-center">Bienvenido</h3>
        </div>
      </div>
      <div class="form-group form-primary">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control fill' %>
        <span class="form-bar"></span>
        <label class="float-label">Email</label>
      </div>
      <div class="form-group form-primary">
        <%= f.password_field :password, autocomplete: "current-password", class:'form-control fill' %>
        <span class="form-bar"></span>
        <label class="float-label">Contrase√±a</label>
      </div>
      <div class="row m-t-25 text-left">
        <div class="col-12">
          <div class="checkbox-fade fade-in-primary d-">
            <label>
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <span class="cr">
                  <i class="cr-icon icofont icofont-ui-check txt-primary"></i>
                </span>
              <% end %>
              <span class="text-inverse">Recordarme</span>
            </label>
          </div>
        </div>
      </div>
      <div class="row m-t-30">
        <div class="col-md-12">
          <%= f.submit "Ingresar", class:'btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20' %>
          <%= content_tag(:div, flash[:alert], id: "flash_alert") if flash[:alert] %>
        </div>
      </div>
      <hr/>
      <div class="row">
        <div class="col-md-10">
          <%= render "devise/shared/links" %>
          <p class="text-inverse text-left"><a href="/"><b>Volver al sitio</b></a></p>
        </div>
        <div class="col-md-2">
          <img src="../files/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
        </div>
      </div>
    </div>
  </div>
<% end %>

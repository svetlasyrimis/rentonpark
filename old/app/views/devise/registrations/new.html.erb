<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'md-float-material form-material'}) do |f| %>
  <div class="text-center">
    <img src="../files/assets/images/logo.png" alt="logo.png">
  </div>
  <div class="auth-box card">
    <div class="card-block">
      <div class="row m-b-20">
        <div class="col-md-12">
          <h3 class="text-center txt-primary">Nuevo Rider</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group form-primary">
            <%= f.text_field :name, class: "form-control fill", required: true %>
            <span class="form-bar"></span>
            <label class="float-label">Nombres</label>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group form-primary">
            <%= f.text_field :lastname, class: "form-control fill", required: true %>
            <span class="form-bar"></span>
            <label class="float-label">Apellidos</label>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="offset-2 col-sm-8">
          <div class="form-group form-primary">
            <%= f.select(:sex, sex_for_select, {}, { class: "form-control" }) %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group form-primary">
            <%= f.text_field :phone_prefix, class: "form-control fill", required: true %>
            <span class="form-bar"></span>
            <label class="float-label">Celular(Prefijo)</label>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group form-primary">
            <%= f.text_field :phone, class: "form-control fill", required: true %>
            <span class="form-bar"></span>
            <label class="float-label">Celular(Número)</label>
          </div>
        </div>
      </div>
      <br>
      <div class="form-group form-primary">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control fill", required: true %>
        <span class="form-bar"></span>
        <label class="float-label">Email</label>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group form-primary">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control fill', required: true %>
            <span class="form-bar"></span>
            <label class="float-label">Contraseña</label>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group form-primary">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control fill', required: true %>
            <span class="form-bar"></span>
            <label class="float-label">Confirmar Contraseña</label>
          </div>
        </div>
      </div>
      <div class="row m-t-30">
        <div class="col-md-12">
          <%= f.submit "Registrarme", class: "btn btn-primary btn-md btn-block waves-effect text-center m-b-20" %>
        </div>
      </div>
      <hr/>
      <div class="row">
        <div class="col-md-10">
          <%= render "devise/shared/links" %>
          <p class="text-inverse text-left"><a href="/"><b>Volver al sitio</b></a></p>
        </div>
        <div class="col-md-2">
          <img src="../files/assets/images/auth/Logo-small-bottom.png" alt="small-logo.png">
        </div>
      </div>
    </div>
  </div>
<% end %>
